<%= form_for @min_order, as: :min_order, url: update_minimum_order_post_path(current_user) do |f| %>
  <div class='form-group'>
    <%= f.label :minimum_order %>
    <%= f.number_field :minimum_order, class: 'form-control', step: :any %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Update minimum order', class: 'btn btn-success' %>
  </div>
<% end %>
