<%= form_for @post do |f| %>
  <div class='form-group'>
    <%= f.label :title, "Product Name" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :description, "Product Description" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :price %>
    <div class='form-inline'>
      <%= f.number_field :price, step: :any, class: 'form-control' %>
      <%= f.label :unit, class: 'sr-only' %>
      <%= f.text_field :unit, class: 'form-control', placeholder: 'per sack, each ...' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :max_avaliable, "Quantity avaliable for sale?" %>
    <%= f.number_field :max_avaliable, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :special_instructions %>
    <%= f.text_area :special_instructions, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.submit "#{btnText}", class: 'btn btn-success' %>
  </div>
  
<% end %>
