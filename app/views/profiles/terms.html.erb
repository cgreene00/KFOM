<%= render 'shared/error_messages', object: @profile_wizard %>

<% if @profile_wizard.profile.seller? %>
  <%= render 'seller' %>
<% else %>
  <%= render 'buyer' %>
<% end %>

<%= form_for @profile_wizard, as: :profile_wizard, url: validate_step_profile_path do |f| %>
  
  <%= hidden_field_tag :current_step, 'terms' %>
  <div class='form-group'>
    <%= f.label :terms_of_service, "I Agree to the terms listed above" %>
    <%= f.check_box :terms_of_service, class: 'checkbox-inline' %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Update Profile', class: 'btn btn-success' %>
  </div>
<% end %>
