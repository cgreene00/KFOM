<h1>Profile</h1>
<%= form_for(@profile) do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class='form-group'>
    <%= f.label :seller, "Will this account be selling items?" %><br/>
    <%= f.label :seller, "Yes", value: true %>
    <%= f.radio_button :seller, true %>
    <%= f.label :seller, "No", value: false %>
    <%= f.radio_button :seller, false %>
  </div>
  <div class='form-group'>
    <%= f.label :firstname %>
    <%= f.text_field :firstname, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :lastname %>
    <%= f.text_field :lastname, class: 'form-control' %>
  </div>
  <div id='more_info' <% unless @profile.seller? %> class='hidden' <% end%>>
    <div class='form-group'>
      <%= f.label :business_name %>
      <%= f.text_field :business_name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :payable_to, "Who should buyers make checks payable to?" %>
      <%= f.text_field :payable_to, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class='form-group'>      
      <%= f.label :state %><br/>
      <%= f.select :state, options_for_select(Profile::States.to_a, @profile.state), class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.submit "Update Profile", class: 'btn btn-success' %>
  </div>
<% end %>
