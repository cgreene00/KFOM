<%= form_for @profile_wizard, as: :profile_wizard, url: validate_step_profile_path do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
    
  <%= hidden_field_tag :current_step, 'account_type' %>
  
  <div class='form-group'>
    <%= f.label :seller, "Will this account be selling items?" %><br/>
    <%= f.label :seller, "Yes", value: true %>
    <%= f.radio_button :seller, true %>
    <%= f.label :seller, "No", value: false %>
    <%= f.radio_button :seller, false %>
  </div>
  <div class='form'group'>
    <%= f.submit 'Continue', class: 'btn btn-success' %>
  </div>
<% end %>
